FROM python:3.9-slim

WORKDIR /app

# Copy only what we need for JWKS server
COPY requirements-jwks.txt .
COPY jwks_standalone.py app.py

# Install dependencies
RUN pip install --no-cache-dir -r requirements-jwks.txt

# Expose port
EXPOSE 5000

# Run the minimal JWKS server
CMD ["gunicorn", "--bind", "0.0.0.0:5000", "app:app"]
